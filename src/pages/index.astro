---
import Layout from "../layouts/Layout.astro";
import ChatMessage from "../components/ChatMessage.astro";
import ChatHeader from "../components/ChatHeader.astro";
import ChatForm from "../components/ChatForm.astro";
---

<Layout title="Chat bot">
  <div class="flex flex-col h-screen bg-gray-50 dark:bg-gray-900">
    <ChatHeader />

    <main class="flex-1 flex justify-center overflow-hidden mb-9">
      <div class="w-full max-w-4xl flex flex-col">
        <div
          class="flex-1 overflow-y-auto scrollbar-hide p-6 pb-8 space-y-6 chat-messages"
        >
          <ChatMessage>Hello! How can I help you today?</ChatMessage>
        </div>
      </div>
    </main>

    <ChatForm />
  </div>
</Layout>

<style>
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }

  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>
